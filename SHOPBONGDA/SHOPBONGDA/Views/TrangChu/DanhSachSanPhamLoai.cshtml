@model IEnumerable<Model.EF.SANPHAM>

@{
    ViewBag.Title = "DanhSachSanPhamLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var i = @Model.Where(x => x.IDSANPHAM == 2).SingleOrDefault();
}
<style>
    .alert-danger.col-md-4 {
        margin-top: 28px;
    }
</style>
@if (@Model.Count() != 0)
{
    <div class="women-product">
        <div class=" w_content">
            <div class="women">
                <h4><strong>Sản Phẩm Loại: </strong><span>@i.LOAISANPHAM.TENLOAISANPHAM</span> </h4>

                <div class="clearfix"> </div>
            </div>
        </div>

        @foreach (var item in Model)
        {
            <div class="  product-grid">
                <div class="content_box">
                    <a href="/TrangChu/ChiTietSanPham/@item.IDSANPHAM">
                        <div class="left-grid-view grid-view-left">
                            <img src="@Url.Content(@item.HINHANH)" class="img-responsive watch-right" alt="" />
                            <div class="mask">
                                <div class="info"> Quick View </div>
                            </div>
                        </div>
                    </a>
                </div>
                <h4><a href="/TrangChu/ChiTietSanPham/@item.IDSANPHAM">@item.TENSANPHAM</a></h4>
                <p>@item.GIA</p>
            </div>
        }

    </div>

}
else
{

    <div class="alert-danger col-md-4">
        KHÔNG CÓ SẢN PHẨM NÀO
    </div>
}

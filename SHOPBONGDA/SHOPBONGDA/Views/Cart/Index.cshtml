@model List<SHOPBONGDA.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table#banggiohang {
    margin-top: 30px;
}
</style>
<div class="table">
    <div class="col-md-8">
        <table class="table-bordered table" id="banggiohang">
            <thead>
                <tr>
                    <td>Tên sản phẩm</td>
                    <td>Số lượng</td>
                    <td>Giá</td>
                    <td>Thành tiền</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SanPham.TENSANPHAM</td>
                        <td>@item.SoLuong</td>
                        <td>@item.SanPham.GIA</td>
                        <td>@(item.SanPham.GIA * item.SoLuong)</td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>
